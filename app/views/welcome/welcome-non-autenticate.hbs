<div class="container">

    <div class="text-center">
      <h1><span class="fa fa-lock"></span>Bienvenu sur Orthogym</h1>

      <div class="col-sm-6 col-sm-offset-3">


        <!-- show any messages that come back with authentication -->
        {{#if message}}
            <div class="alert alert-danger">{{message}}</div>
        {{/if}}

        <!-- LOGIN FORM -->
        <form action="/login" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Connectez-vous</button>
        </form>

        <a href="/signup" class="btn btn-default btn-lg"><span class="fa fa-user"></span>Enregistrez-vous</a>
      </div>
    </div>

</div>
